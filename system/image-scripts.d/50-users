#!/bin/sh -efu

#default_groups="cdwriter cdrom audio video proc radio floppy uucp wheel camera xgrp scanner"
for g in adbusers camera scanner xgrp; do
	groupadd -f -r "$g"
done

for u in gleb doppel; do
	! id "$u" >/dev/null 2>&1 || exit 1
	useradd "$u"
	mkdir -p /home/"$u"
	chmod 0000 /home/"$u"
	mkdir -p /var/lib/systemd/linger
	touch /var/lib/systemd/linger/"$u"

	hasher-useradd "$u"
done

for u in gleb doppel; do
	hasher-useradd "${u}_b"
done

for g in users xgrp; do
	gpasswd -a gleb "$g"
	gpasswd -a doppel "$g"
done

for g in adbusers lxd netadmin proc uucp vmusers wheel; do
	gpasswd -a gleb "$g"
done

for g in audio camera; do
	gpasswd -a doppel "$g"
done
